    <Button onAction="#searchPatient" text="Search Patient" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <ListView fx:id="listView" GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="2" />

