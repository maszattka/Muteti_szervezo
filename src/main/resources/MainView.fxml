    <Label text="TAJ Szám:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="tajNumberField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Név:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Születési Év:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="birthYearField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

